/* pages/company/company.wxss */
.content{
  width: 100%;
  height: 700px;
  background: #f2f2f2;
}

.hr{
  padding-top: 40px;
}

.item{
  margin: 0 auto;
  border: 1px solid #cccccc;
  width: 90%;
  height: 40px;
  border-radius: 3px;
  background: #ffffff;
  margin-bottom: 15px;
}

.item input{
  height: 40px;
  line-height: 40px;
  margin-left: 10px;
}

.holder{
  font-size: 14px;
  color: #999999;
}

.flex {
  display: flex;
  flex-direction: row;
}

.flex input{
  width: 300px;
}

.item switch{
  margin-right: 5px;
  margin-top: 5px;
}

.mobileInfo{
  display: flex;
  flex-direction: row;
}

.mobile{
  margin: 0 auto;
  border: 1px solid #cccccc;
  width: 50%;
  height: 40px;
  border-radius: 3px;
  background: #ffffff;
  margin-bottom: 15px;
  margin-left: 5%;
}

.mobile input{
  margin-left: 10px;
  margin-top: 8px;
}

.code{
  border: 1px solid #cccccc;
  width: 35%;
  height: 40px;
  background: #eeeeec;
  border-radius: 3px;
  text-align: center;
  margin-left: 10px;
  line-height: 40px;
  color: #999999;
  font-size: 15px;
  margin-right: 5%;
  margin-bottom: 15px;
}

.xieyi{
  margin-top: 15px;
  margin-left: 15px;
  font-size: 13px;
}

.agree{
  margin-left: 5px;
  font-size: 13px;
  color: #666666;
}

.opinion{
  font-size: 13px;
  color: #ff0000;
  font-weight: bold;
}

.btn{
  margin-top: 30px;
  color: #999999;
}
