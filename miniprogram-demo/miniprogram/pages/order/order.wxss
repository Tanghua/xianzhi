/* pages/order/order.wxss */
.content{
  background: #f2f2f2;
}

.address{
  width: 100%;
  height: 150px;
  display: flex;
  flex-direction: row;
}

.address image{
  position: absolute;
  right: 15px;
  top: 70px;
}

.address_title{
  font-size: 12px;
  color: #333333;
  margin-left: 10px;
}

.address_details{
  font-size: 20px;
  margin-left: 10px;
}

.user_info{
  display: flex;
  flex-direction: row;
}

.user_name{
  font-size: 12px;
  color: #333333;
  margin-left: 10px;
}

.user_number{
  font-size: 12px;
  color: #333333;
  margin-left: 5px;
}


